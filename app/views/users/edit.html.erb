<% if flash[:notice] %>
 <p id="notice">
   <%= flash[:notice] %>
 </p>
<% end %>

<% if @user.errors.any? %>
  <%= @user.errors.count %>error!
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>User info</h1>

<%= form_with model: @user do |f| %>
 <label for="inputName">Name</label>
 <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>

 <label for="inputImage">Image</label>
 <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

 <laber for="inputIntroduction">Introduction</laber>
 <%= f.text_area :introduction,placeholder:"自己紹介" %>


 <%= f.submit "Update User" %>
<% end %>


