<div class="container">
 <div class="mx-auto">
  <%= render "searchs/form", user: @user %>
 </div>
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @book_user %>
      <%= render 'create', book: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
             <%= image_tag @book.user.get_profile_image(100,100) %><br>
             <%= link_to @book.user.name, user_path(@book.user.id) %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %></td>
            <% end %>
            <td><% if @book.favorited_by?(current_user) %>
                  <p>
                    <%= link_to book_favorites_path(@book.id), method: :delete do %>
                     ♥<%= @book.favorites.count %>
                    <% end %>
                  </p>
                  <% else %>
                  <p>
                    <%= link_to book_favorites_path(@book.id), method: :post do %>
                     ♡<%= @book.favorites.count %>
                    <% end %>
                  </p>
                <% end %>
            </td>
            <td>
              <p>コメント件数：<%= @book.book_comments.count %></p>
              <% @book.book_comments.each do |book_comment| %>
                <p><%= image_tag book_comment.user.get_profile_image(100,100) %></p>
                <%= book_comment.user.name %>
                <%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %>
                <% if book_comment.user == current_user %>
                  <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
                <% end %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <%= form_with model: [@book, @book_comment] do |f| %>
        <%= f.text_area :comment, rows: '5' %>
        <%= f.submit "送信する", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>