<%= render 'users/user', user: @user %>

<h1>Books</h1>
<% @books.each do |book| %>

<div>
  <%= image_tag book.user.get_profile_image(100,100) %>
  <p>Title</p>
  <%= link_to book.title, book_path(book.id) %>
  <p>Opinion</p>
  <%= book.body %>
  <%= link_to book.user.name, user_path(book.user.id) %>

</div>

<% end %>

<%= render 'create', book: @book %>