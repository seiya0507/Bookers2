<% if flash[:notice] %>
 <p id="notice">
   <%= flash[:notice] %>
 </p>
<% end %>


<% if @book.errors.any? %>
  <%= @book.errors.count %>error!
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



<h1>Editing Boook</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

<h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '保存' %>

<% end %>
